<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>DrawGame.io</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/css/gameRoom.css">
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/gameRoom.js"></script>
    </head>
    <body>
        <% include header %>
        <section id="preGameSection" class="container justify-content-center p-3">
            <div class="row" style="height: 70vh;">

                <div class="col-6 align-self-center">
                    <div id="ownSection" class="flex-column p-3 m-4">
                        <div class="text-center"><h1>PLAYER A</h1></div>
                        <div class="text-center m-3">
                            <% if (user.thumbnail) { %>
                                <img class="thumbnail" src="<%= user.thumbnail %>"/>
                            <% }else{ %>
                                <img class="thumbnail" src="/pic/defult-thumbnail.png"/>
                            <% } %> 
                            <h5 class="m-3"><%= user.username %></h5>
                        </div> 
                        <div class="text-center">
                            <button id="ReadyBtn" type="button" class="btn btn-primary m-1" onclick="getReady()">Lock</button>
                            <button id="offReadyBtn" type="button" class="btn btn-danger m-1 nonDisplayBtn" onclick="offReady()">Unlock</button>
                        </div>
                    </div>
                </div>

                <div class="col-6 align-self-center">
                    <div id="opponentSection" class="flex-column p-3 m-4">
                        <div class="text-center"><h1>PLAYER B</h1></div>
                        <div class="text-center m-3">
                            <img id="opponentImg" src="/pic/defult-thumbnail.png"/>
                            <h5 class="m-3" id="opponentName">Waitting ...</h5>
                        </div>   
                        <div class="text-center">
                            <button id="opponentBtn" type="button" class="btn btn-danger m-1">Clear</button>
                        </div> 
                    </div>
                </div>
            </div>
        </section>
        <section id="gameSection" class="nonDisplaySection m-3">
            <div class="d-flex justify-content-center p-3">
                <div class="flex-column">
                    <div class="text-center"><h1>PLAYER A</h1></div>
                    <div id="playerA" class="m-3"><canvas id="Sketchpad" width="60" height="40"></canvas></div> 
                    <div class="text-center">
                        <button type="button" class="btn btn-primary btn-lg m-1" onclick="clearCanvas()">clear</button>
                    </div>
                </div>
                <div class="flex-column">
                    <div class="text-center"><h1>PLAYER B</h1></div>
                    <div id="playerB" class="m-3"><img id="opponentSketchpad"></div>    
                </div>
            </div>
        </section>
    </body>
</html>